@using Padel.Core.ViewModels;
@if(istruttore != null)
{
    <div class="card" style="width: 18rem;">
        <img src="@istruttore.Foto" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@istruttore.NomeCompleto</h5>
            <p class="card-text">@istruttore.Email</p>
            <p class="card-text">@istruttore.NumeroTelefono</p>
        </div>
    </div>
}

@code {
    [Parameter] public DettaglioIstruttoreViewModel? istruttore { get; set; }
}
